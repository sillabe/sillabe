{
    "compilerOptions": {
        "composite": true,
        "moduleResolution": "node",
        "target": "es5",
        "module": "CommonJS",
        "lib": [
            "es2015",
            "es2016",
            "es2017"
        ],
        "strict": true,
        "sourceMap": true,
        "declaration": true,
        "allowSyntheticDefaultImports": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "declarationDir": "dist/types",
        "outDir": "dist/lib",
        "rootDir": "./src",
        "typeRoots": [
            "node_modules/@types",
            "../../node_modules/@types"
        ],
        "strictNullChecks": true,
        "esModuleInterop": true
    },
    "include": [
        "src"
    ]
}
