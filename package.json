{
    "name": "@sillabe/sillabe",
    "version": "0.0.0",
    "private": true,
    "license": "MIT",
    "scripts": {
        "lint": "lerna run lint --stream",
        "lint-fix": "lerna run lint-fix --stream",
        "pretty": "lerna run pretty --stream",
        "pretty-fix": "lerna run pretty-fix --stream",
        "build": "lerna run build --stream",
        "test": "lerna run test --stream --parallel",
        "commit": "git-cz",
        "release": "cross-env HUSKY_BYPASS=true lerna publish",
        "release:next": "cross-env HUSKY_BYPASS=true lerna publish --dist-tag next"
    },
    "devDependencies": {
        "@commitlint/cli": "^12.1.4",
        "@commitlint/config-conventional": "^12.1.4",
        "@types/jest": "^26.0.23",
        "@types/node": "^15.6.1",
        "commitizen": "^4.2.4",
        "cross-env": "^7.0.3",
        "cz-conventional-changelog": "^3.3.0",
        "eslint": "^7.27.0",
        "eslint-config-blitz": "^0.35.2",
        "husky": "^6.0.0",
        "jest": "^27.0.1",
        "jest-config": "^27.0.1",
        "lerna": "^4.0.0",
        "prettier": "^2.3.0",
        "ts-jest": "^27.0.1",
        "ts-node": "^10.0.0",
        "tslib": "^2.2.0",
        "typescript": "^4.3.2"
    },
    "workspaces": [
        "packages/*"
    ],
    "config": {
        "commitizen": {
            "path": "node_modules/cz-conventional-changelog"
        }
    },
    "lint-staged": {
        "*": [
            "npm run update-readme"
        ],
        "{src,test}/**/*.ts": [
            "prettier --write"
        ]
    },
    "commitlint": {
        "extends": [
            "@commitlint/config-conventional"
        ]
    },
    "husky": {
        "hooks": {
            "commit-msg": "[[ -n $HUSKY_BYPASS ]] || commitlint -E HUSKY_GIT_PARAMS",
            "pre-commit": "lint-staged",
            "pre-push": "yarn test"
        }
    }
}
